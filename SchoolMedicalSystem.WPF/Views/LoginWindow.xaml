<Window x:Class="SchoolMedicalSystem.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="450" Width="380"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="15" Background="#FFFFFF" BorderBrush="#DDDDDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.2" BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="40" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Button Content="&#x2715;" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" Margin="0,5,5,0" BorderThickness="0" 
                        Background="Transparent" Foreground="Gray" FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="280">
                <TextBlock Text="ĐĂNG NHẬP" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5" Foreground="#555555"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10,8" BorderBrush="#CCCCCC" BorderThickness="1"/>

                <TextBlock Text="Mật khẩu:" Margin="0,15,0,5" Foreground="#555555"/>
                <PasswordBox x:Name="PasswordBox" 
                             Padding="10,8" BorderBrush="#CCCCCC" BorderThickness="1"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" 
                           TextWrapping="Wrap" Margin="0,15,0,0" MinHeight="30"/>

                <Button Content="ĐĂNG NHẬP" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox}"
                        Height="40" Margin="0,15,0,0" Foreground="White" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>