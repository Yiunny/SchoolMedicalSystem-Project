<UserControl x:Class="SchoolMedicalSystem.WPF.Views.StudentLookupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                <Button Content="Tìm" Command="{Binding SearchCommand}" Margin="5,0,0,0"/>
            </StackPanel>
            <ListView ItemsSource="{Binding SearchResults}" SelectedItem="{Binding SelectedStudent}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="260">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ClassName}" Foreground="DarkCyan" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding StudentCode}" FontStyle="Italic" FontSize="11" Foreground="Gray"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

        <Border Grid.Column="1" Margin="15,0,0,0" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5"
                Visibility="{Binding IsStudentSelected, Converter={StaticResource BoolToVis}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="{Binding SelectedStudent.FullName}" FontSize="18" FontWeight="Bold" Foreground="CornflowerBlue"/>
                    <TextBlock Text="{Binding SelectedStudent.StudentCode}" Margin="0,0,0,10" FontStyle="Italic"/>
                    <Separator/>
                    <TextBlock Margin="0,10,0,0"><Run FontWeight="Bold">Ngày sinh:</Run> <Run Text="{Binding SelectedStudent.DateOfBirth, StringFormat='dd/MM/yyyy'}"/></TextBlock>
                    <TextBlock><Run FontWeight="Bold">Lớp:</Run> <Run Text="{Binding SelectedStudent.ClassName}"/></TextBlock>
                    <TextBlock Margin="0,10,0,0"><Run FontWeight="Bold">Phụ huynh:</Run> <Run Text="{Binding SelectedStudent.ParentName}"/></TextBlock>
                    <TextBlock><Run FontWeight="Bold">SĐT Phụ huynh:</Run> <Run Text="{Binding SelectedStudent.ParentPhoneNumber}" Foreground="Red" FontWeight="Bold"/></TextBlock>
                    <TextBlock Margin="0,10,0,0" FontWeight="Bold">Tiền sử dị ứng:</TextBlock>
                    <TextBlock Text="{Binding SelectedStudent.Allergies}" TextWrapping="Wrap" Background="MistyRose" Padding="5"/>
                    <Separator/>
                    <Button Content="Xem Lịch sử Chi tiết" Margin="0,15,0,0" Command="{Binding ViewHistoryCommand}"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>