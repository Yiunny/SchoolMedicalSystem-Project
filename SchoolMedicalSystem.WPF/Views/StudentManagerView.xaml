<UserControl x:Class="SchoolMedicalSystem.WPF.Views.StudentManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="QUẢN LÝ HỌC SINH" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tìm theo tên:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="150" Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>

            <TextBlock Text="Lọc theo lớp:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox Width="120" ItemsSource="{Binding ClassList}" SelectedItem="{Binding SelectedClass}"/>

            <Button Content="Lọc" Width="60" Margin="10,0,0,0" Command="{Binding FilterCommand}"/>
            <Button Content="Xóa lọc" Width="60" Margin="5,0,0,0" Command="{Binding ClearFilterCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã HS" Binding="{Binding StudentCode}" Width="Auto"/>
                <DataGridTextColumn Header="Họ và Tên" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Ngày Sinh" Binding="{Binding DateOfBirth, StringFormat='dd/MM/yyyy'}"/>
                <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}"/>
                <DataGridTextColumn Header="Lớp" Binding="{Binding ClassName}"/>
                <DataGridTextColumn Header="SĐT Phụ huynh" Binding="{Binding ParentPhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Thêm" Width="80" Margin="0,0,10,0" Command="{Binding AddStudentCommand}"/>
            <Button Content="Sửa" Width="80" Margin="0,0,10,0" Command="{Binding EditStudentCommand}"/>
            <Button Content="Xóa" Width="80" Command="{Binding DeleteStudentCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>