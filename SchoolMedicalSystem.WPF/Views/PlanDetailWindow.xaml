<Window x:Class="SchoolMedicalSystem.WPF.Views.PlanDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Tên Kế hoạch:"/>
        <TextBox Margin="0,5,0,10" Text="{Binding Plan.PlanName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Chọn Lớp:"/>
        <ComboBox Margin="0,5,0,10" ItemsSource="{Binding ClassList}" SelectedItem="{Binding Plan.ClassName}"/>
        <TextBlock Text="Ngày khám:"/>
        <DatePicker Margin="0,5,0,10" SelectedDate="{Binding Plan.CheckupDate, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Trạng thái:" Margin="0,10,0,0"/>
        <ComboBox Margin="0,5,0,10" 
          ItemsSource="{Binding Statuses}" 
          SelectedItem="{Binding Plan.Status}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Lưu" Width="80" IsDefault="True" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Hủy" Width="80" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>